/**index.wxss**/
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}

/* 用户信息栏样式 */
.user-header {
   display: flex;
   align-items: center;
   background: rgba(255, 255, 255, 0.95);
   border-radius: 20rpx;
   padding: 30rpx;
   margin-bottom: 40rpx;
   box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
 }

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}

.user-info {
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.user-welcome {
  font-size: 24rpx;
  color: #666;
}

/* 扫码区域样式 */
.scan-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 50rpx 40rpx;
  text-align: center;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.scan-title {
   font-size: 40rpx;
   font-weight: bold;
   color: #333;
   margin-bottom: 16rpx;
 }

.scan-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.scan-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 28rpx 60rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
}

.scan-btn:disabled {
  opacity: 0.7;
}

.scan-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

/* 结果展示区域样式 */
.result-section {
   background: rgba(255, 255, 255, 0.95);
   border-radius: 20rpx;
   padding: 40rpx;
   margin-bottom: 40rpx;
   box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
 }