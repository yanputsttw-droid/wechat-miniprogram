/* pages/login/login.wxss */
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 40rpx;
}

.header {
  text-align: center;
  margin-top: 80rpx;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #fff;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 16rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.login-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.welcome-text {
  margin-bottom: 80rpx;
  text-align: center;
}

.welcome-text text {
  font-size: 32rpx;
  color: #fff;
}

.login-buttons {
  width: 100%;
  max-width: 500rpx;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  border: none;
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 40rpx;
}

.login-btn.primary {
  background: #07C160;
  color: #fff;
}

.login-btn.primary:active {
  background: #06AE56;
}

.login-btn.secondary {
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.login-btn.secondary:active {
  background: rgba(255, 255, 255, 0.3);
}

.login-btn.debug {
  background: #FF9800;
  color: #fff;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}